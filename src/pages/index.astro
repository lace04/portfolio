---
import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import SocialPill from '../components/SocialPill.astro';
import GithubIcon from '../components/icons/Github.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import MailIcon from '../components/icons/Mail.astro';
import CodeIcon from '../components/icons/Code.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Projects from '../components/Projects.astro';
---

<Layout
  title='Portfolio de Luis - Desarrollador y Programador Web.'
  description='Contrata a Luis Cifuentes para crear tu aplicaciones web.'
>
  <main class='px-4'>
    <SectionContainer class='py-44 pb-32'>
      <img
        class='rounded-full size-[50px] mb-4'
        src='https://avatars.githubusercontent.com/u/73793929?v=4'
        alt='photo'
      />
      <h1
        class='text-white text-3xl md:text-4xl lg:text-5xl font-semibold flex flex-row gap-x-4 pb-6'
      >
        Hey, soy Luis <a
          href='https://www.linkedin.com/in/luis-cifuentes-18486621a/'
          class='flex justify-center items-center'
          target='_blank'
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class='text-xl text-wrap max-w-[700px]'>
        <span>+10 años de experiencia.</span>
        <span class='text-yellow-200/80'>
          Desarrollador Web y Creador de Contenido.</span
        >
        <span class='text-sky-100/90'>De Bogotá Colombia.</span>
        <span class='opacity-80'
          >Me especializo en el desarrollo de aplicaciones web</span
        >
      </h2>
      <nav class='flex gap-4 mt-4 flex-wrap'>
        <SocialPill
          href='https://www.linkedin.com/in/luis-cifuentes-18486621a/'
        >
          <LinkedInIcon class='size-4 md:size-5 lg:size-6' />LinkedIn
        </SocialPill>

        <SocialPill href='https://github.com/lace04'>
          <GithubIcon class='size-4 md:size-5 lg:size-6' />Github
        </SocialPill>

        <SocialPill href='mailto:luisace04@gmail.com'>
          <MailIcon class='size-4 md:size-5 lg:size-6' />luisace04@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id='experiencia' class='py-20'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80'
      >
        <Briefcase class='size-7' />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id='proyectos' class='py-20'>
      <h2
        class='text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80'
      >
        <CodeIcon class='size-7' />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
