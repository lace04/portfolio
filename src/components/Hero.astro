---
const personalImageAlt = 'Miguel Ángel';
import Badge from '@/components/Badge.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import MailIcon from '@/components/icons/Mail.astro';
import SocialPill from '@/components/SocialPill.astro';
---

<div class='max-w-xl'>
  <div class='flex gap-4 mb-4'>
    <img
      class='rounded-full shadow-lg size-16'
      src='https://avatars.githubusercontent.com/u/73793929?v=4'
      alt='photo'
    />
    <a
      href='https://www.linkedin.com/in/luis-cifuentes-18486621a/'
      target='_blank'
      rel='noopener'
      class='flex items-center transition md:justify-center md:hover:scale-105'
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class='text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white'
  >
    Hola, soy Luis
  </h1>
  <p
    class='mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300'
  >
    <span>+5 años de experiencia.</span>
    <span class='text-slate-600 dark:text-yellow-200'>
      Estudiante de Ingeniería de Sistemas y Tecnólogo.</span
    >
    <span class='dark:text-sky-100/90'>De Bogotá Colombia.</span>
    <span class='opacity-80'
      >Me especializo en el desarrollo de aplicaciones web</span
    >
  </p>
  <nav class='flex flex-wrap gap-4 mt-8'>
    <SocialPill href='mailto:luisace04@gmail.com'>
      <MailIcon class='size-4' />
      Contáctame
    </SocialPill>
    <SocialPill href='https://www.linkedin.com/in/luis-cifuentes-18486621a/'>
      <LinkedInIcon class='size-4 md:size-5 lg:size-6' />LinkedIn
    </SocialPill>
  </nav>
</div>
